<mujoco model="panda scene">

  <asset>
    <mesh name="hammer_head" file="objects/hammer/meshes/hammer_head.stl" scale="1 1 1"/>
    <mesh name="hammer_neck" file="objects/hammer/meshes/hammer_neck.stl" scale="1 1 1"/>
    <mesh name="h_contact0_mesh"    file="objects/hammer/meshes/contact0.stl"    scale="1 1 1"/>
    <mesh name="h_contact1_mesh"    file="objects/hammer/meshes/contact1.stl"    scale="1 1 1"/>
  </asset>

  <worldbody>

    <body name="hammer" pos="0.7 0 0.8"> 
      <freejoint/>

      <geom name="hammer_head"
                  type="mesh"
                  mesh="hammer_head"
                  rgba="0.7 0.2 0.2 1"
                  contype="0"
                  conaffinity="0"
                  group="1"
                  density="0"/>

      <geom name="hammer_neck"
                  type="mesh"
                  mesh="hammer_neck"
                  rgba="0.2 0.2 0.2 1"
                  contype="0"
                  conaffinity="0"
                  group="1"
                  density="0"/> 

      <geom name="h_colision_c0" type="mesh" mesh="h_contact0_mesh" 
            rgba="0 0 0 0" condim="3" friction="1 0.005 0.0001"/>
            
      <geom name="h_colision_c1" type="mesh" mesh="h_contact1_mesh" 
            rgba="0 0 0 0" condim="3" friction="1 0.005 0.0001"/>
    </body>
  </worldbody>
